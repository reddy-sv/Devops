pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Install') {
      steps { sh 'npm ci' } // or npm install
    }

    stage('Test') {
      steps { sh 'npm test' }
      post { always { junit '**/test-results/*.xml' } } // optional if producing junit xml
    }

    stage('Archive') {
      steps { archiveArtifacts artifacts: 'dist/**', fingerprint: true }
    }
  }

  post {
    success { echo 'SUCCESS' }
    failure { echo 'FAILURE' }
  }
}

